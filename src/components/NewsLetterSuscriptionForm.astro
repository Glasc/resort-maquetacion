---
import { Icon } from "astro-icon/components";
import PrimaryButton from "./ui/PrimaryButton.astro";
---

<section class="w-full max-w-7xl mx-auto text-center px-5 py-12 my-12">
  <div class="space-y-3">
    <h2 class="section-subtitle-2 uppercase">Escapes begin in your inbox</h2>
    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>
  </div>
  <form
    class="mt-12 md:mt-20 flex flex-col sm:flex-row gap-x-5 gap-y-4 items-center sm:items-stretch justify-center"
  >
    <div class="w-full max-w-xs">
      <label
        for="name"
        class="mb-2 text-sm text-gray-900 sr-only dark:text-white">Name</label
      >
      <div class="relative">
        <div
          class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none"
        >
          <Icon class="inline-block" name="mdi:user" />
        </div>
        <input
          type="text"
          id="name"
          class="block w-full max-w-lg p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500"
          placeholder="Name"
          required
        />
      </div>
    </div>
    <div class="w-full max-w-xs">
      <label
        for="email"
        class="mb-2 text-sm text-gray-900 sr-only dark:text-white">Name</label
      >
      <div class="relative">
        <div
          class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none"
        >
          <Icon class="inline-block" name="mdi:email" />
        </div>
        <input
          type="email"
          id="email"
          class="block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500"
          placeholder="Email"
          required
        />
      </div>
    </div>
    <PrimaryButton>Suscribe</PrimaryButton>
  </form>
</section>
