---
import { Icon } from "astro-icon/components";
import logo from "../assets/logo/Garza-Blanca-Corporativo-Principal.png";
import smallLogo from "../assets/logo/garza-blanca-small-logo.png";
import { Image } from "astro:assets";
---

<nav class="flex justify-between w-full max-w-7xl mx-auto p-4">
  <div class="flex items-center space-x-3">
    <button>
      <Icon size={35} name="mdi:hamburger-close" />
    </button>
    <p class="hidden lg:block font-medium">
      Ph. <span class="font-semibold  ">1 887 845 3791</span>
    </p>
    <div class="flex items-center gap-x-1">
      <Icon name="mdi:world" />
      <span class="font-medium">ES</span>
    </div>
  </div>
  <div class="items-center justify-between">
    <Image
      class="mx-auto relative bottom-2 hidden sm:block"
      src={logo}
      alt="Garza Blanca logo"
      format="avif"
      width={170}
    />
    <Image
      class="mx-auto block sm:hidden"
      src={smallLogo}
      alt="Garza Blanca logo"
      format="avif"
      width={50}
    />
  </div>
  <div class="flex gap-x-3 sm:gap-x-4">
    <button>
      <Icon size={20} class="inline-block" name="mdi:person" />
      <span class="font-medium">Log in</span></button
    >
    <button class="hidden sm:block">
      <Icon size={20} class="inline-block" name="mdi:location-enter" />
      <span class="font-medium">Register</span></button
    >
    <button
      type="button"
      class="py-2 px-5 text-sm font-medium focus:outline-none bg-white rounded-lg border border-red-200 text-red-700 hover:bg-red-100 hover:text-red-700 focus:z-10 focus:ring-4 focus:ring-gray-200 uppercase hidden md:block"
      >Book a resort</button
    >
  </div>
</nav>
