---
import { Icon } from "astro-icon/components";
import siteConfig from "../../data/site-config";
import { getImage } from "astro:assets";

const optimizedBackground = await getImage({
  src: siteConfig.hero.backgroundImage.src,
  format: "avif",
  width: 1920,
  height: 1080,
});
---

<section
  class="hero bg-center min-h-[80vh] bg-no-repeat bg-fixed bg-gray-700/60 bg-blend-multiply"
  style={{
    backgroundImage: `url(${optimizedBackground.src})`,
    backgroundSize: "cover",
  }}
>
  <div
    class="px-4 mx-auto max-w-screen-xl text-center py-24 lg:py-56 flex justify-center items-center"
  >
    <div>
      <h1
        class="font-special mb-2 text-4xl font-extrabold tracking-tight leading-none text-white md:text-5xl lg:text-6xl"
      >
        Garza Blanca Resorts
      </h1>

      <h2 class="font-section text-xl tracking-tight leading-none text-white">
        BY TAFER HOTELS & RESORTS
      </h2>

      <div class="text-white flex gap-x-4 justify-center text-2xl mt-9">
        <Icon title="placeholder logo" size={80} name="mdi:apps" />
        <Icon title="placeholder logo" size={80} name="mdi:apps" />
      </div>
    </div>
  </div>
</section>
