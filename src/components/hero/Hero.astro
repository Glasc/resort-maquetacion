---
import { Icon } from "astro-icon/components";
import { getImage } from "astro:assets";
import background from "@assets/main-background.jpg";

const optimizedBackground = await getImage({
  src: background,
  format: "avif",
  width: 1920,
  height: 1080,
});
---

<section
  class="hero bg-center min-h-[82vh] bg-no-repeat bg-fixed bg-blend-multiply overflow-hidden"
  style={{
    backgroundImage: `linear-gradient(to top, rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.4)), url(${optimizedBackground.src})`,
    backgroundSize: "cover",
  }}
>
  <div
    class="px-4 mx-auto max-w-screen-xl text-center py-24 lg:py-56 flex justify-center items-center"
  >
    <div>
      <h1
        class="special-title-2 text-white mb-2 text-4xl font-extrabold tracking-tight leading-none md:text-5xl lg:text-6xl"
      >
        Garza Blanca Resorts
      </h1>

      <h2 class="text-xl tracking-tight leading-none text-white">
        BY TAFER HOTELS & RESORTS
      </h2>

      <div class="text-white flex gap-x-4 justify-center text-2xl mt-9">
        <Icon title="placeholder logo" size={80} name="mdi:apps" />
        <Icon title="placeholder logo" size={80} name="mdi:apps" />
      </div>
    </div>
  </div>
</section>

